<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loginbackground"

    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="br.com.yimobile.igor.RegisterActivity">

    <ImageView
        android:layout_width="191dp"
        android:layout_height="41dp"
        android:src="@drawable/iconigor"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="47dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        android:layout_marginRight="8dp"
        android:id="@+id/imageView3"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <ImageView
        android:layout_width="151dp"
        android:layout_height="42dp"
        android:src="@drawable/loginfacebook"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        android:layout_marginTop="43dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView3"
        android:id="@+id/imageView" />

    <ImageView
        android:layout_width="289dp"
        android:layout_height="380dp"
        android:src="@drawable/cadastrocaixa"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="64dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView3"
        android:id="@+id/caixa"
        app:layout_constraintHorizontal_bias="0.505" />

    <EditText
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="12"
        android:hint="E-mail"
        android:inputType="textEmailAddress"
        android:textColor="#ffff"
        android:backgroundTint="@android:color/white"

        app:layout_constraintTop_toBottomOf="@+id/imageView"
        android:layout_marginTop="34dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.504" />

    <EditText
        android:id="@+id/senha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="12"
        android:backgroundTint="@android:color/white"
        android:inputType="textPassword"
        android:textColor="#ffff"
        android:hint="Senha"

        app:layout_constraintTop_toBottomOf="@+id/email"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <EditText
        android:id="@+id/nome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="12"
        android:backgroundTint="@android:color/white"
        android:inputType="textPersonName"
        android:textColor="#ffff"
        android:hint="Nome de usuÃ¡rio"

        app:layout_constraintTop_toBottomOf="@+id/senha"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <EditText
        android:id="@+id/data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="12"
        android:backgroundTint="@android:color/white"
        android:inputType="text|datetime"
        android:textColor="#ffff"
        android:hint="Data de Nascimento"

        app:layout_constraintTop_toBottomOf="@+id/nome"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <EditText
        android:id="@+id/sexo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="12"
        android:backgroundTint="@android:color/white"
        android:inputType="textAutoComplete"
        android:textColor="#ffff"
        android:hint="Sexo"

        app:layout_constraintTop_toBottomOf="@+id/data"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageButton
        android:id="@+id/cadastrobutton"
        android:scaleType="fitCenter"
        android:layout_width="93dp"
        android:layout_height="41dp"
        app:srcCompat="@drawable/cadastrobutton"
        android:background="?android:attr/selectableItemBackground"
        app:layout_constraintLeft_toLeftOf="parent"

        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.812"
        app:layout_constraintTop_toBottomOf="@+id/sexo"
        app:layout_constraintBottom_toBottomOf="@+id/caixa"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="67dp"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:layout_width="26dp"
        android:layout_height="15dp"
        android:src="@drawable/loginatention"

        android:id="@+id/atentionemail"
        app:layout_constraintRight_toRightOf="@+id/email"
        app:layout_constraintTop_toTopOf="@+id/email"
        android:layout_marginTop="14dp"/>

    <ImageView
        android:layout_width="26dp"
        android:layout_height="15dp"
        android:src="@drawable/loginatention"

        android:id="@+id/atentionsenha"

        app:layout_constraintRight_toRightOf="@+id/senha"
        app:layout_constraintTop_toTopOf="@+id/senha"
        android:layout_marginTop="14dp" />


</android.support.constraint.ConstraintLayout>