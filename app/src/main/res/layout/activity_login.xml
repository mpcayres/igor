<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loginbackground"

    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="br.com.yimobile.igor.LoginActivity">

    <ImageView
        android:layout_width="191dp"
        android:layout_height="41dp"
        android:src="@drawable/iconigor"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="47dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        android:layout_marginRight="8dp"
        android:id="@+id/imageView3" />


    <ImageView
        android:layout_width="151dp"
        android:layout_height="42dp"
        android:src="@drawable/loginfacebook"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        android:layout_marginTop="43dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView3"
        android:id="@+id/imageView" />

    <ImageView
        android:layout_width="26dp"
        android:layout_height="15dp"
        android:src="@drawable/loginatention"

        android:id="@+id/atentionemail"
        app:layout_constraintRight_toRightOf="@+id/editText"
        app:layout_constraintTop_toTopOf="@+id/editText"
        android:layout_marginTop="14dp"/>

    <ImageView
        android:layout_width="26dp"
        android:layout_height="15dp"
        android:src="@drawable/loginatention"

        android:id="@+id/atentionsenha"

        app:layout_constraintRight_toRightOf="@+id/editText2"
        app:layout_constraintTop_toTopOf="@+id/editText2"
        android:layout_marginTop="14dp" />

    <Button
        android:layout_width="73dp"
        android:layout_height="25dp"

        android:background="@null"
        android:text="criar conta"
        android:textSize="5pt"
        android:textColor="#00e2ba"
        android:textAllCaps="false"
        android:typeface="sans"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.619"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintVertical_bias="0.321"
        app:layout_constraintRight_toLeftOf="@+id/esquecisenha"
        android:id="@+id/criarconta"
        app:layout_constraintTop_toBottomOf="@+id/editText2"
        android:layout_marginLeft="8dp" />

    <Button
        android:layout_width="142dp"
        android:layout_height="24dp"

        android:background="@null"
        android:text="esqueci minha senha"
        android:textSize="5pt"
        android:textColor="#ffffff"
        android:textAllCaps="false"
        android:typeface="sans"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.756"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.32"
        android:id="@+id/esquecisenha"

        app:layout_constraintTop_toBottomOf="@+id/editText2" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="E-mail"
        android:inputType="textEmailAddress"
        android:textColor="#ffff"
        android:backgroundTint="@android:color/white"

        app:layout_constraintTop_toBottomOf="@+id/imageView"
        android:layout_marginTop="34dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.504" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:backgroundTint="@android:color/white"
        android:inputType="textPassword"
        android:textColor="#ffff"
        android:hint="Senha"

        app:layout_constraintTop_toBottomOf="@+id/editText"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/manterView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="manter-me conectado"
        android:textSize="5pt"
        android:textColor="#ffffff"
        app:layout_constraintLeft_toRightOf="@+id/checkButton"

        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/editText2" />

    <ImageButton
        android:id="@+id/checkButton"
        android:scaleType="fitCenter"
        android:layout_width="29dp"
        android:layout_height="22dp"
        app:srcCompat="@drawable/loginunchecked"
        android:background="?android:attr/selectableItemBackground"
        app:layout_constraintTop_toBottomOf="@+id/editText2"
        android:layout_marginLeft="72dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="6dp" />

    <ImageButton
        android:id="@+id/enterButton"
        android:scaleType="fitCenter"
        android:background="?android:attr/selectableItemBackground"
        android:layout_width="72dp"
        android:layout_height="37dp"
        android:layout_marginRight="75dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/editText2" />


</android.support.constraint.ConstraintLayout>
