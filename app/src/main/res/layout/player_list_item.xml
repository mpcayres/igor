<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="67dp">

    <ImageView
        android:id="@+id/linha"
        android:layout_width="180dp"
        android:layout_height="10dp"
        android:src="@drawable/linha"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/player_circle" />

    <ImageView
        android:id="@+id/player_circle"
        android:layout_width="73dp"
        android:layout_height="59dp"
        android:src="@drawable/circle_players"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/player_nickname" />

    <TextView
        android:id="@+id/player_text"
        android:layout_width="60dp"
        android:layout_height="20dp"
        android:text="Jogador"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_below="@+id/linha"
        android:layout_toEndOf="@+id/player_circle" />


    <TextView
        android:id="@+id/player_nickname"
        android:layout_width="113dp"
        android:layout_height="18dp"
        android:text=""
        android:textStyle="italic"
        android:textSize="13sp"
        android:layout_below="@+id/player_text"
        android:layout_toEndOf="@+id/player_circle" />


</RelativeLayout>